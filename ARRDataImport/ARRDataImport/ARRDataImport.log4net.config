<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  
  <log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <!-- Pattern to output the caller's file name and line number -->
        <!--<conversionPattern value="%date %-5level [%thread] (%file:%line) - %message%newline" />-->
        <!--<conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %level %logger - %message%newline" />-->
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>

    <!--  -->
    <appender name="File" type="log4net.Appender.FileAppender">
      <file type="log4net.Util.PatternString" value="..\Logs\%date{yyyyMMdd}\GDRDataImport.%date{yyyyMMdd}.log" />
      <!--<datePattern value="yyyyMMdd'.log'" />
      <rollingStyle value="Date" />
      <staticLogFileName value="false" />-->
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %level %logger - %message%newline" />
      </layout>
    </appender>
    
    <root>
      <level value="DEBUG" />
      <appender-ref ref="Console" />
      <appender-ref ref="File" />
    </root>
  </log4net>
</configuration>